<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".shiyujia.activity.FriendPageActivity">

    <LinearLayout
        android:id="@+id/lin_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true">

                <android.support.design.widget.AppBarLayout
                    android:id="@+id/appBarLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent">

                    <android.support.design.widget.CollapsingToolbarLayout
                        android:id="@+id/collapse_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@color/transparent"
                        app:layout_scrollFlags="scroll|exitUntilCollapsed">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transparent">

                            <RelativeLayout
                                android:id="@+id/hand_layout"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="17dp">

                                <LinearLayout
                                    android:layout_width="118dp"
                                    android:layout_height="118dp"
                                    android:layout_alignParentLeft="true"
                                    android:background="@drawable/touxiang_bian"
                                    android:gravity="center"
                                    android:padding="12dp">

                                    <com.app.cookbook.xinhe.foodfamily.util.CircleImageView
                                        android:id="@+id/user_hand"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:src="@drawable/touxiang" />
                                </LinearLayout>

                                <ImageView
                                    android:id="@+id/user_sex"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/xingbie_nan" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/compile_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingBottom="15dp"
                                android:paddingLeft="15dp"
                                android:paddingRight="15dp"
                                android:text="编辑"
                                android:textColor="@color/color_292c31"
                                android:textSize="14dp"
                                android:visibility="gone" />

                            <RelativeLayout
                                android:id="@+id/user_attention_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/hand_layout"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="7dp"
                                android:visibility="visible">

                                <TextView
                                    android:id="@+id/user_attention"
                                    android:layout_width="87dp"
                                    android:layout_height="28dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/home_details_attention_bg"
                                    android:gravity="center_horizontal"
                                    android:text="关注"
                                    android:textColor="@color/color_0EB39B"
                                    android:textSize="14dp"
                                    android:visibility="gone" />

                                <TextView
                                    android:id="@+id/user_attention_off"
                                    android:layout_width="87dp"
                                    android:layout_height="28dp"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/home_details_attention_bg_off"
                                    android:gravity="center_horizontal"
                                    android:text="已关注"
                                    android:textColor="@color/color_bbbbbb"
                                    android:textSize="14dp"
                                    android:visibility="gone" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/user_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_attention_layout"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="7dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/color_292c31"
                                android:textSize="28dp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/user_profession"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_name"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginTop="6dp"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text=""
                                android:textColor="@color/color_292c31"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/user_signature"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/user_profession"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="3dp"
                                android:text=""
                                android:textColor="@color/color_292c31"
                                android:textSize="12dp" />
                        </RelativeLayout>
                    </android.support.design.widget.CollapsingToolbarLayout>
                    <!--需要显示的部分-->
                    <LinearLayout
                        android:id="@+id/haha"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/lin1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/collapse_toolbar"
                        android:layout_centerHorizontal="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/attention_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/attention_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_292c31"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="关注"
                                android:textColor="@color/color_777777"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/collect_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/collect_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_292c31"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="收藏"
                                android:textColor="@color/color_777777"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/fans_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fans_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_292c31"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="粉丝"
                                android:textColor="@color/color_777777"
                                android:textSize="12dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/praise_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/praise_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/color_292c31"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="3dp"
                                android:text="获赞"
                                android:textColor="@color/color_777777"
                                android:textSize="12dp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_below="@+id/lin1"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/touying_fenge"
                        android:orientation="vertical" />

                    <RadioGroup
                        android:id="@+id/group"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/print_btn"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:button="@null"
                            android:checked="true"
                            android:gravity="right"
                            android:paddingRight="42dp"
                            android:text="印迹"
                            android:textColor="@color/color_0EB39B"
                            android:textSize="16dp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/questions_answers_btn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:button="@null"
                                android:checked="true"
                                android:gravity="left"
                                android:paddingLeft="42dp"
                                android:text="回答"
                                android:textColor="@color/color_292c31"
                                android:textSize="16dp" />

                            <ImageView
                                android:id="@+id/sanjiao_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="53dp"
                                android:src="@drawable/icon_wen_da_classify"
                                android:visibility="invisible" />

                        </LinearLayout>
                    </RadioGroup>
                </android.support.design.widget.AppBarLayout>

                <android.support.v4.view.ViewPager
                    android:id="@+id/viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            </android.support.design.widget.CoordinatorLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:id="@+id/image_bg"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/mengban_title"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/mengban"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@drawable/mengban_title"
                    android:orientation="vertical"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/color_00000000"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="12dp">

                        <ImageView
                            android:id="@+id/iamge_back"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/icon_details_back" />

                        <TextView
                            android:id="@+id/title_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/attention_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="15dp"
                            android:text="关注"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/attention_tv_off"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignParentRight="true"
                            android:gravity="center_vertical"
                            android:paddingRight="15dp"
                            android:text="已关注"
                            android:textColor="@color/white"
                            android:textSize="14dp"
                            android:visibility="gone" />

                    </RelativeLayout>
                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/back_btn"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:background="@color/transparent"
                android:orientation="vertical" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>