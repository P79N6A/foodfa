<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.app.cookbook.xinhe.foodfamily.main.BianJiActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_layout_btn"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="23dp"
        android:text="我关注的人"
        android:textColor="@color/yanzhengma"
        android:textSize="24dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/image_top"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:src="@drawable/icon_user_null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_top"
        android:layout_centerHorizontal="true"
        android:text="Ta还未关注任何人"
        android:textColor="#565656"
        android:textSize="14dp" />
</RelativeLayout>
