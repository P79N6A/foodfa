<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ClipSquareImageView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/lin_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rel1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/back_img"
                        android:layout_width="19dp"
                        android:layout_height="19dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        android:src="@drawable/back_image" />

                    <LinearLayout
                        android:id="@+id/back_btn"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:background="@color/transparent"
                        android:orientation="horizontal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/wenben6"
                        android:textColor="@color/top_heiziti"
                        android:textSize="18dp" />

                    <ImageView
                        android:id="@+id/chicun_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:keepScreenOn="true"
                        android:src="@drawable/sibisan" />

                    <ImageView
                        android:id="@+id/shanchu_btn"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="22dp"
                        android:keepScreenOn="true"
                        android:src="@drawable/shanchubtn" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/fra1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rel1">

                    <LinearLayout
                        android:id="@+id/camera_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.app.cookbook.xinhe.foodfamily.util.camera_surface_view.CameraSurfaceView
                            android:id="@+id/cameraSurfaceView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/image_view_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#000000"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <com.app.cookbook.xinhe.foodfamily.util.camera_surface_view.ClipSquareImageView
                            android:id="@+id/seniorcropimageView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            ClipSquareImageView:ClipSquareIV_BorderColor="@android:color/transparent"
                            ClipSquareImageView:ClipSquareIV_BorderDistance="0dp"
                            ClipSquareImageView:ClipSquareIV_OutsideColor="#000000" />

                    </LinearLayout>
                </FrameLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/horizontalscrollview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fra1"
                    android:layout_marginTop="12dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="28dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/xiangce_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/xiangce" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="@string/wenben7"
                            android:textColor="@color/color_969696"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/camera_btn"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/paizhao_btn_nomarl" />

                    <ImageView
                        android:id="@+id/paizhao_btn"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_marginLeft="50dp"
                        android:src="@drawable/paizhao_btn" />


                    <TextView
                        android:id="@+id/next_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="50dp"
                        android:text="@string/wenben8"
                        android:textColor="@color/top_heiziti"
                        android:textSize="14dp" />
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/fuceng"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#50000000"
            android:orientation="horizontal"
            android:visibility="visible">

           <LinearLayout
               android:layout_width="wrap_content"
               android:background="@drawable/tiaozhenghuafu"
               android:layout_alignParentRight="true"
               android:layout_marginTop="80dp"
               android:layout_marginRight="5dp"
               android:layout_alignParentTop="true"
               android:layout_height="wrap_content">
           </LinearLayout>

            <LinearLayout
                android:layout_toRightOf="@+id/left"
                android:layout_width="wrap_content"
                android:background="@drawable/paishe"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="55dp"
                android:layout_marginBottom="126dp"
                android:layout_height="wrap_content">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:background="@drawable/congxiamngcer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="40dp"
                android:layout_marginBottom="126dp"
                android:layout_height="wrap_content">
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>


</LinearLayout>