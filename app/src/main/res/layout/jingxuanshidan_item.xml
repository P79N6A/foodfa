<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/shidan_title"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/label_item_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_ededed">

        <ImageView
            android:id="@+id/biaoqian_image"
            android:layout_width="50dp"
            android:layout_height="49dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_label_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/biaoqian_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/biaoqian_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="90dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/yanzhengma"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/guanzhu_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/bottom_hui"
                    android:textSize="14dp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="3dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/lianjie" />

                <TextView
                    android:id="@+id/wenti_question"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:text=""
                    android:textColor="@color/bottom_hui"
                    android:textSize="14dp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/select_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:src="@drawable/icon_srlrct_label"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/add_select_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/select_image"
            android:text="自定义标签"
            android:textColor="@color/color_969696"
            android:textSize="12dp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/add_btn"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/biaoqian_bg_red"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/add_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="添加"
                android:textColor="@color/white"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="13dp"
            android:background="@color/fenge" />

    </RelativeLayout>
</LinearLayout>

