<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="true"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dp"
            android:paddingRight="13dp"
            android:paddingTop="13dp"
            android:src="@drawable/back_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="第三方账号管理"
            android:textColor="@color/color_292c31"
            android:textSize="18dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wechat_bind_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/title_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="微信"
            android:textColor="@color/color_292c31"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/wechat_bind_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/wechat_switch_btn"
            android:text="未绑定"
            android:textColor="@color/color_777777"
            android:textSize="14dp" />

        <Switch
            android:id="@+id/wechat_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:switchMinWidth="20dp"
            android:textOff="  "
            android:textOn="  "
            android:thumb="@drawable/regulate_selector_thumb"
            android:track="@drawable/regulate_selector" />
    </RelativeLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/wechat_bind_layout"
        android:background="@color/color_dbdbdb" />


    <RelativeLayout
        android:id="@+id/weibo_bind_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/line2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="微博"
            android:textColor="@color/color_292c31"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/weibo_bind_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/weibo_switch_btn"
            android:text="未绑定"
            android:textColor="@color/color_777777"
            android:textSize="14dp" />

        <Switch
            android:id="@+id/weibo_switch_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="17dp"
            android:textOff="  "
            android:textOn="  "
            android:thumb="@drawable/regulate_selector_thumb"
            android:track="@drawable/regulate_selector" />
    </RelativeLayout>

    <View
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/weibo_bind_layout"
        android:background="@color/color_dbdbdb" />

    <TextView
        android:id="@+id/bind_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="@color/color_FF411C"
        android:textSize="12dp"
        android:visibility="gone" />

</RelativeLayout>