<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="0.5dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="400dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="310dp"
                android:layout_height="350dp"
                android:layout_centerInParent="true"
                android:background="@drawable/icon_login_error">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/white" />

                <TextView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/dot_bg" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="197dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="165dp"
                    android:maxLines="4"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/color_777777"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:layout_marginTop="8dp"
                    android:text="如不是本人操作，请尽快登录修改密码。是否立即重新登录？"
                    android:textColor="@color/color_292c31"
                    android:textSize="14dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/cancel_login"
                        android:layout_width="109dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shape_huang_corner4"
                        android:gravity="center"
                        android:layout_alignParentLeft="true">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/alert_dialog_cached_cancel"
                            android:textSize="18dp"
                            android:textColor="@color/color_0EB39B"
                            android:gravity="center" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/now_login"
                        android:layout_width="109dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_huang_corner3"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cx_login"
                            android:textSize="18dp"
                            android:textColor="@color/white"
                            android:gravity="center" />
                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>