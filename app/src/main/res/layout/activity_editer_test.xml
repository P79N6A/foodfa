<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="28dp">

        <TextView
            android:id="@+id/quxiao_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="取消"
            android:textColor="@color/bottom_hui"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xiayibu_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="发布"
            android:textColor="@color/top_heiziti"
            android:textSize="14dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <jp.wasabeef.richeditor.RichEditor
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/biaoti_layout"
            android:layout_marginBottom="71dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/jianpan_top_view"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_below="@+id/et_new_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5px"
                    android:layout_alignParentTop="true"
                    android:background="#dbdbdb" />

                <LinearLayout
                    android:id="@+id/select_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/charu" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="13dp"
                            android:text="插入图片"
                            android:textColor="@color/yanzhengma"
                            android:textSize="14dp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/black">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/action_undo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/undo" />

                    <ImageView
                        android:id="@+id/action_redo"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/redo" />

                    <ImageView
                        android:id="@+id/action_bold"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/bold" />

                    <ImageView
                        android:id="@+id/action_italic"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/italic" />

                    <ImageView
                        android:id="@+id/action_subscript"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/subscript" />

                    <ImageView
                        android:id="@+id/action_superscript"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/superscript" />

                    <ImageView
                        android:id="@+id/action_strikethrough"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/strikethrough" />

                    <ImageView
                        android:id="@+id/action_underline"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/underline" />

                    <ImageView
                        android:id="@+id/action_heading1"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h1" />

                    <ImageView
                        android:id="@+id/action_heading2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h2" />

                    <ImageView
                        android:id="@+id/action_heading3"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h3" />

                    <ImageView
                        android:id="@+id/action_heading4"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h4" />

                    <ImageView
                        android:id="@+id/action_heading5"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h5" />

                    <ImageView
                        android:id="@+id/action_heading6"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/h6" />

                    <ImageView
                        android:id="@+id/action_txt_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/txt_color" />

                    <ImageView
                        android:id="@+id/action_bg_color"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/bg_color" />


                    <ImageView
                        android:id="@+id/action_indent"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/indent" />

                    <ImageView
                        android:id="@+id/action_outdent"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/outdent" />

                    <ImageView
                        android:id="@+id/action_align_left"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_left" />

                    <ImageView
                        android:id="@+id/action_align_center"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_center" />

                    <ImageView
                        android:id="@+id/action_align_right"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/justify_right" />

                    <ImageView
                        android:id="@+id/action_insert_bullets"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/bullets" />

                    <ImageView
                        android:id="@+id/action_insert_numbers"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/numbers" />

                    <ImageView
                        android:id="@+id/action_blockquote"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/blockquote" />

                    <ImageView
                        android:id="@+id/action_insert_image"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/insert_image" />

                    <ImageView
                        android:id="@+id/action_insert_link"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@drawable/insert_link" />

                    <ImageView
                        android:id="@+id/action_insert_checkbox"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:contentDescription="@null"
                        android:src="@android:drawable/checkbox_on_background" />

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>


    </RelativeLayout>


    <View xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:background="#88888888"
        android:visibility="gone" />

</LinearLayout>
