    <com.app.cookbook.xinhe.foodfamily.util.ScrollLinearLayout
        android:id="@+id/sll_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7">

        <RelativeLayout
            android:id="@+id/rel_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:id="@+id/search_btn_layout"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/answer_comm_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_btn"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/sousuoone" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="食与家"
                    android:textColor="@color/color_8E8E93"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/question_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="35dp"
                    android:src="@drawable/icon_food_friends" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提问"
                    android:textColor="@color/top_heiziti"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </com.app.cookbook.xinhe.foodfamily.util.ScrollLinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/sll_nav"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:paddingTop="10dp"
        app:tabBackground="@android:color/transparent"
        app:tabIndicatorColor="@color/color_FF411C"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@color/bb_black"
        app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
        app:tabTextColor="@color/color_BCBCBC" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:background="@color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/touying"
            android:visibility="visible" />
    </FrameLayout>

    <com.app.cookbook.xinhe.foodfamily.util.CircleImageView
        android:id="@+id/top_btn"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/icon_up"
        android:visibility="gone" />

</RelativeLayout>
