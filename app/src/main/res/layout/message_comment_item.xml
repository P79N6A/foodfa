<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_layout_btn"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="23dp"
            android:text="评论"
            android:textColor="@color/yanzhengma"
            android:textSize="24dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginLeft="8dp"
            android:padding="10dp">

            <com.app.cookbook.xinhe.foodfamily.util.CircleImageView
                android:id="@+id/comm_image"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/touxiang" />

            <LinearLayout
                android:id="@+id/comm_name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="80dp"
                android:layout_toRightOf="@+id/comm_image"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/comm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:maxWidth="130dp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_777777"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/comm_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/color_292c31"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/comm_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text=""
                android:textColor="@color/color_bbbbbb"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/comm_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/comm_name_layout"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/comm_image"
                android:ellipsize="end"
                android:layout_marginRight="15dp"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/color_292c31"
                android:textSize="14dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/item_layout"
            android:layout_marginLeft="10dp"
            android:background="@color/color_ededed" />
    </RelativeLayout>

</RelativeLayout>