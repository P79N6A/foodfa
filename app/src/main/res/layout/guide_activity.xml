<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/splash_layout_root_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--颜色渐变ImageView-->
    <View
        android:id="@+id/main_layout_gradient_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/splash_layout_gradient_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/entrance_btn"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:background="@drawable/guide_btn_bg"
        android:gravity="center"
        android:text="等你分享"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/splash_layout_pager_indicator_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:gravity="center"
        android:orientation="horizontal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:visibility="gone">

            <TextView
                android:id="@+id/splash_layout_skip_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:paddingLeft="24dp"
                android:text="跳过"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/splash_layout_done_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingRight="24dp"
                android:text="完成"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageButton
                android:id="@+id/splash_layout_next_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:paddingRight="24dp"
                android:scaleType="center"
                android:src="@drawable/arrow_icon"
                android:tint="@android:color/black"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentTop="true"
            android:background="@color/color_dbdbdb"
            android:visibility="gone" />


    </RelativeLayout>

</RelativeLayout>
