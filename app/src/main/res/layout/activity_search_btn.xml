<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/fnege_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/rel_top"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/select_issue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/issue_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="问题"
                android:textColor="@color/login_red"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/issue_fenge"
                android:layout_width="64dp"
                android:layout_height="3dp"
                android:layout_marginTop="-3dp"
                android:background="@color/color_0EB39B"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_answer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/answer_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="回答"
                android:textColor="@color/bottom_hui"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/answer_fenge"
                android:layout_width="64dp"
                android:layout_height="3dp"
                android:layout_marginTop="-3dp"
                android:background="@color/color_0EB39B"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_user"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="用户"
                android:textColor="@color/bottom_hui"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/user_fenge"
                android:layout_width="64dp"
                android:layout_height="3dp"
                android:layout_marginTop="-3dp"
                android:background="@color/color_0EB39B"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tag_title"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="标签"
                android:textColor="@color/bottom_hui"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/tag_fenge"
                android:layout_width="64dp"
                android:layout_height="3dp"
                android:layout_marginTop="-3dp"
                android:background="@color/color_0EB39B"
                android:orientation="horizontal" />

        </LinearLayout>
    </LinearLayout>


