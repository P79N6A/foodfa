<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <shape>
            <solid android:color="#51B55C" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <stroke android:width="0.1dp" android:color="@color/transparent" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid android:color="#51B55C" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <stroke android:width="0.1dp" android:color="@color/transparent" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#51B55C" />
            <corners android:bottomLeftRadius="4dp" android:bottomRightRadius="4dp" android:topLeftRadius="4dp" android:topRightRadius="4dp" />
            <stroke android:width="0.1dp" android:color="@color/transparent" />
        </shape>
    </item>

</selector>