<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/select_nan"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_height="90dp">
        <LinearLayout
            android:id="@+id/bianji_layout"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/bianji"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="#565656"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/jubao_layout"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/jubao"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="举报"
                android:textColor="#565656"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/bianji"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑"
                android:textColor="#565656"
                android:layout_marginTop="8dp"
                android:textSize="12dp"
                />
        </LinearLayout>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/edit_hui"
        android:layout_height="10dp"/>
    <LinearLayout
        android:id="@+id/select_dismiss"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:layout_height="54dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alert_dialog_cached_cancel"
            android:textSize="18dp"
            android:textColor="@color/yanzhengma"
            />
    </LinearLayout>
</LinearLayout>