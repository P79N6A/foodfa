<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rel_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="36dp">

        <ImageView
            android:id="@+id/search_btn"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/sousuoone" />

        <LinearLayout
            android:id="@+id/question_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:src="@drawable/tiwentu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提问"
                android:textColor="@color/top_heiziti"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fnege_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_top"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:id="@+id/select_jingxuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="67dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jianxuan_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="精选"
                android:textColor="@color/login_red"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/jingxuan_fenge"
                android:layout_width="46dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/login_red"
                android:orientation="horizontal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/select_zuixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="67dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/zuixin_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="最新"
                android:textColor="@color/bottom_hui"
                android:textSize="14dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/zuixin_fenge"
                android:layout_width="46dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/login_red"
                android:orientation="horizontal" />

        </LinearLayout>


    </RelativeLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="match_parent" />
        <LinearLayout
            android:layout_marginTop="-1dp"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:background="@drawable/touying">

        </LinearLayout>

    </FrameLayout>


</LinearLayout>