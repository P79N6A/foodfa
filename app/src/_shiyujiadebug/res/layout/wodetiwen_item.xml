<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="14dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="精神科地方就是看老大劲焚枯食淡金风科技谁离开房间时刻"
            android:textColor="@color/top_heiziti"
            android:textSize="16dp"
            android:textStyle="bold" />


        <RelativeLayout
            android:id="@+id/user_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/question_content"
            android:layout_marginBottom="6dp"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/touxiang_image"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="13dp"
                android:src="@color/red" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/touxiang_image"
                android:text="名字"
                android:textColor="@color/bottom_hui"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/canyu_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="18dp"
                android:text=""
                android:textColor="@color/bottom_hui"
                android:textSize="12dp"
                android:textStyle="normal" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_below="@+id/user_layout"
            android:background="@color/edit_hui" />
    </RelativeLayout>
</RelativeLayout>