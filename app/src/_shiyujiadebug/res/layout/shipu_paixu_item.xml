<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:id="@+id/llyt_style0"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/shidan_img"
            android:layout_width="86dp"
            android:layout_height="48dp"
            android:background="@drawable/beijingtu"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            app:riv_border_color="@color/white"
            app:riv_border_width="1dp"
            android:layout_marginLeft="20dp"
            app:riv_corner_radius="6dp"
            app:riv_mutate_background="true"
            app:riv_oval="false"
            app:riv_tile_mode="repeat" />

        <TextView
            android:id="@+id/tv_style0"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/shidan_img"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:text="@string/add_wodeshidan"
            android:layout_weight="1"
            android:textSize="14dp"
            android:textColor="@color/heiziti"
            />

        <ImageView
            android:layout_gravity="center_vertical|right"
            android:id="@+id/iv_style0_handler"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginRight="16dp"
            android:scaleType="centerCrop"
            android:src="@drawable/paixu"
            />
    </LinearLayout>
    <View
        android:id="@+id/v_style0"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:background="#e3e4e5" />

    <TextView
        android:id="@+id/tv_style1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/corner_bg_touch_normal"
        android:gravity="center" />

</FrameLayout>