<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/id_pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="75dp">
            <ImageView
                android:id="@+id/weixin_btn"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="75dp"
                android:src="@mipmap/ssdk_oks_classic_wechat"
                />

            <ImageView
                android:id="@+id/qq_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:src="@mipmap/ssdk_oks_classic_qq"
                />

            <ImageView
                android:id="@+id/weibo_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:src="@mipmap/ssdk_oks_classic_sinaweibo"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="75dp">
            <ImageView
                android:id="@+id/pengyouquan_btn"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="75dp"
                android:src="@mipmap/ssdk_oks_classic_wechatmoments"
                />

            <ImageView
                android:id="@+id/qq_kongjian_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:src="@mipmap/ssdk_oks_classic_qzone"
                />

            <ImageView
                android:id="@+id/weixinshoucang_btn"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:src="@mipmap/ssdk_oks_classic_wechatfavorite"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>