<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/touxiang_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        >

        <LinearLayout
            android:layout_alignParentTop="true"
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/location_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="13dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="精神科地方就是看老大劲焚枯食淡金风科技谁离开房间时刻"
                android:textColor="@color/top_heiziti"
                android:textSize="16dp"
                android:textStyle="normal" />


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/center_start"
            android:layout_below="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/location_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="2018/01/02 20:30"
                android:textColor="#bbbbbb"
                android:textSize="12dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/location_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="13dp"
                android:text="查看详情"
                android:textColor="@color/bottom_hui"
                android:textSize="14dp"
                android:textStyle="normal" />
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/center_start"
            android:layout_width="match_parent"
            android:layout_height="1.5px"
            android:background="@color/fenge" />
    </RelativeLayout>
</RelativeLayout>